{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "sourceMap": true,
    "rootDir": ".",
    "declaration": false,
    "emitDecoratorMetadata": false,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "strictNullChecks": true,
    "lib": [
      "es2015",
      "dom"
    ]
  },
  "include": [
    "./**/*.ts"
  ],
  "atom": {
    "rewriteTsconfig": false,
    "formatOnSave": false
  },
  "filesGlob": [
    "./**/*.ts"
  ],
  "compileOnSave": false,
  "buildOnSave": false
}
